<h1>New Search</h1>
<%= form_with scope: :word, url: items_path, local: true do |form| %>
    <div class="field">
    <%= form.label :word %>
    <%= form.text_field :word ,placeholder:"Enter a word..." %>
  </div>

  <div class="actions">
    <%= form.submit "START SEARCH"%>
  </div>
<% end %>
<% if @result_search_api != '' %>
  <h1>Definition</h1>
  <%= @result_search_api %>
<% end %>
<% if @code_error != '' %>
  <%#= @code_error %>
  <%=@message_error %>
<% end %>

<%= link_to 'Back', items_path %>
